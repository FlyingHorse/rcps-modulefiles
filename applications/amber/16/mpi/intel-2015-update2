#%Module -*- tcl -*-
##
## modulefile
##

proc ModulesHelp { } {

    puts stderr "This module adds the AMBER16 package to your environment."
    puts stderr ""
}

module-whatis "Adds AMBER 16 to your environment"


conflict amber
prereq gcc-libs/4.9.2
prereq compilers/intel
prereq mpi/intel
prereq python/2.7.9

set              root              /shared/ucl/apps/amber/amber-16-mpi
set              serialroot        /shared/ucl/apps/amber/amber-16

setenv           AMBERHOME         $root
prepend-path     PATH              $root/bin
prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib
prepend-path     PYTHONPATH        $root/lib/python2.7/site-packages

# Need to import parts of the serial code.
append-path      PATH              $serialroot/bin
append-path      LD_RUN_PATH       $serialroot/lib
append-path      LD_LIBRARY_PATH   $serialroot/lib
append-path      PYTHONPATH        $serialroot/lib/python2.7/site-packages

# MPI4PY for MMPBSA
prepend-path     PYTHONPATH        /shared/ucl/apps/amber/support/16/lib/python2.7/site-packages
